
<!-- Homepage/no log in required -->
<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
  <div class="blog">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
      <div class="row-md-6 px-0">
          <h2 class="mb-0 display-4 font-italic">
            <a href="/blog/{{blog.id}}">{{blog.name}}</a>
          </h2>
            <a class="mb-1 text-muted" href="#">{{format_date blog.createdAt}}</a>
            <p class="lead my-3">
                {{blog.description}}
            </p>
      </div>
    </div>
  </div>
{{/each}}
    